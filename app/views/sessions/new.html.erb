<h1>Sign In</h1>
<%= form_with scope: :session, url: session_path do |f| %>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>

    <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Sign in" %>
    <%= link_to "Forgot password?", new_password_reset_path %>
<% end %>